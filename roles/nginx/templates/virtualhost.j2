server {
    listen  80;

    server_name {{ vh }}.lab www.{{ vh }}.lab;

    location / {
        root  /var/www/{{ vh }}/html;
        index  index.html index.htm;
        try_files $uri $uri/ =404;
    }

    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
        root  /usr/share/nginx/html;
    }
}
